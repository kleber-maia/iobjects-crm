package imanager.misc;

/**
 * Representa a lista de valores para ser utilizada nos campos e parâmetros
 * do tipo pessoa.
 */
public class TipoPessoa {

  /**
   * Constante que representa o valor Física.
   */
  static public final int FISICA = 0;
  /**
   * Constante que representa o valor Jurídica.
   */
  static public final int JURIDICA = 1;
  /**
   * Constante que representa o valor Todos.
   */
  static public final int TODOS = 2;
  /**
   * Lista de valores de pesquisa.
   */
  static public final String[] LOOKUP_LIST_FOR_FIELD = {"FÍSICA",
                                                        "JURÍDICA"};
  /**
   * Lista de valores de pesquisa.
   */
  static public final String[] LOOKUP_LIST_FOR_PARAM = {"FÍSICA",
                                                        "JURÍDICA",
                                                        "TODOS"};

  private TipoPessoa() {
  }

}
